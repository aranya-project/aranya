{
	// The daemon's name.
	"name": "name",
	
	// The daemon's working directory.
	//
	// Must already exist.
	"work_dir": "./out",

	// Used to receive API requests from the user library client.
	"uds_api_path": "./out/uds.sock",

	// The path where the daemon should write its PID file.
	"pid_file": "./out/daemon.pid",

	// The network address of the Aranya sync server.
	"sync_addr": "0.0.0.0:4321",

	// QUIC syncer config
	"quic_sync": { "service_name": "Aranya-QUIC-sync" },
}
